{
  "name": "clipboard-history-manager",
  "version": "1.0.0",
  "description": "Application used to extend clipboard functions",
  "main": "public/electron.js",
  "scripts": {
    "start": "concurrently --kill-others \"cross-env BROWSER=none npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:electron": "cross-env ELECTRON_IS_DEV=1 electron .",
    "start:react": "react-scripts start",
    "start:prod": "npm run build:react && npm run start:electron:prod",
    "start:electron:prod": "cross-env ELECTRON_IS_DEV=0 electron .",
    "build": "npm run build:react && electron-builder --dir --publish=never",
    "build:react": "react-scripts build",
    "build:release": "npm run build:react && cross-env GH_TOKEN=\"cc9fe892b2d04cf06ec6f2ce72db5db2f1514888\" electron-builder --publish=always",
    "prebuild": "shx rm -rf dist",
    "prebuild:release": "shx rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miroljub1995/clipboard-history-manager.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/miroljub1995/clipboard-history-manager/issues"
  },
  "homepage": ".",
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "react-scripts": "^2.1.5",
    "shx": "^0.3.2",
    "wait-on": "^3.2.0"
  },
  "build": {
    "appId": "clipboard.history.manager",
    "asar": false,
    "directories": {
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "miroljub1995",
        "repo": "clipboard-history-manager"
      },
      {
        "provider": "generic",
        "url": "http://localhost:8080/"
      }
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
